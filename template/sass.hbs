{{#each layouts}}
  {{#each layout.items}}
${{#if ../../opt.split}}{{cssesc ../../name}}-{{/if}}{{cssesc meta.name}}: -{{baseDim x}}px -{{baseDim y}}px {{baseDim width}}px {{baseDim height}}px
  {{/each}}
{{/each}}

{{#each layouts}}
  {{#each sprites}}
    {{#unless dpi}}
    ${{cssesc ../../classname}}-baseWidth: {{baseWidth}}px
    ${{cssesc ../../classname}}-baseHeight: {{baseHeight}}px
    {{/unless}}
  {{/each}}
{{/each}}

=sprite-width($sprite)
  width: nth($sprite, 3)

=sprite-height($sprite)
  height: nth($sprite, 4)

=sprite-position($sprite)
  $sprite-offset-x: nth($sprite, 1)
  $sprite-offset-y: nth($sprite, 2)
  background-position: $sprite-offset-x  $sprite-offset-y

=sprite($sprite, $display: block)
  +sprite-position($sprite)
  background-repeat: no-repeat
  overflow: hidden
  display: $display
  +sprite-width($sprite)
  +sprite-height($sprite)

{{#each layouts}}
{{#each sprites}}
{{#unless dpi}}
{{../../../indicator}}{{cssesc ../../classname}}
  background-image: url('{{escimage url}}')
{{/unless}}
{{#if dpi}}

@media (-webkit-min-device-pixel-ratio: {{ratio}}), (min-resolution: {{dpi}}dpi)
  {{../../../indicator}}{{cssesc ../../classname}}
    background-image: url('{{escimage url}}')
    background-size: {{baseWidth}}px {{baseHeight}}px
{{/if}}
{{/each}}
{{/each}}
